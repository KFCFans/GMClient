<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="150dp">

    <ImageView
        android:id="@+id/fragment_task_listview_item_image"
        android:src="@drawable/task_item_default"
        android:layout_width="100dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_height="100dp" />
    
    <LinearLayout
        android:layout_toRightOf="@id/fragment_task_listview_item_image"
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_task_listview_item_title"
            android:text="默认标题"
            android:textSize="20sp"
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_task_listview_item_place"
            android:layout_width="wrap_content"
            android:text="默认地点"
            android:textSize="16sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_task_listview_item_endtime"
            android:text="默认时间"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/fragment_task_listview_item_acceptbtn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/activity_item_accept"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"/>

</RelativeLayout>