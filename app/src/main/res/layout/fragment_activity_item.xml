<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="78dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/fragment_activity_item_image"
                    android:layout_width="90dp"
                    android:layout_height="68dp"
                    android:src="@drawable/task_item_default"/>

                <LinearLayout
                    android:layout_width="25dp"
                    android:layout_height="68dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:padding="5dp"
                        android:src="@drawable/activity_item_name" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:padding="4dp"
                        android:src="@drawable/activity_item_place" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:padding="4dp"
                        android:src="@drawable/activity_item_time" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fragment_activity_item_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="活动名称"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/fragment_activity_item_place"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:text="活动地点"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/fragment_activity_item_time"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:text="活动时间"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/fragment_actiivty_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:textColor="#23B990"
                android:textSize="17sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>

</LinearLayout>