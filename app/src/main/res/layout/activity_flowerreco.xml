<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:onClick="back"
            android:background="@drawable/system_back"/>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:textSize="23sp"
            android:textColor="#FFFFFFFF"
            android:layout_height="wrap_content"
            android:text="@string/fragment_flowerreco"
            />
    </RelativeLayout>

    <com.victor.loading.newton.NewtonCradleLoading
        android:visibility="invisible"
        android:id="@+id/activity_flowerreco_loading"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:id="@+id/activity_flowerreco_camera_btn"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:onClick="onClickCamera"
        android:background="@drawable/activity_flowerreco_camera"/>

    <ImageButton
        android:id="@+id/activity_flowerreco_album_btn"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:onClick="onClickAlbum"
        android:background="@drawable/activity_flowerreco_alum"/>

</RelativeLayout>