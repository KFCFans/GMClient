<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.PlantDetailActivity">

    <RelativeLayout
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:onClick="back"
            android:background="@drawable/system_back"/>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:textSize="23sp"
            android:textColor="#FFFFFFFF"
            android:layout_height="wrap_content"
            android:text="@string/fragment_plantdetail"
            />
    </RelativeLayout>

    <ImageView
        android:paddingTop="8dp"
        android:id="@+id/activity_plantdetail_headimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/task_item_default"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称: "
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/activity_plantdetail_plantname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="植物名称"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学名: "
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/activity_plantdetail_plantsname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="植物学名"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情: "
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/activity_plantdetail_plantdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLines="10"
            android:text="植物详情"/>

    </LinearLayout>

</LinearLayout>