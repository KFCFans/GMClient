<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:onClick="back"
            android:background="@drawable/system_back"/>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:textSize="23sp"
            android:textColor="#FFFFFFFF"
            android:layout_height="wrap_content"
            android:text="@string/fragment_taskdetail"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/activity_taskdetail_headimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/task_item_default"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/task_detail_name"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:text="任务名称: "
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/activity_taskdetail_taskname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认名称"
            android:textSize="16sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/task_detail_stime"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:text="开始时间: "
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/activity_taskdetail_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认时间"
            android:textSize="16sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/task_detail_etime"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:text="结束时间: "
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/activity_taskdetail_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认时间"
            android:textSize="16sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/task_detail_detail"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:text="任务详情: "
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/activity_taskdetail_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:text="任务详情任务详情任务详情任务详情任务详情任务详情任务详情任务详情任务详情任务详情"
            android:textSize="16sp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_centerInParent="true"
            android:background="@drawable/task_detail_finished"
            android:onClick="finishedTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>